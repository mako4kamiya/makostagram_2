<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title))%></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <%#= render 'layouts/header' %>
      <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

    <header class="border-bottom">
      <nav class="container fixed-top navbar-expand-lg navbar-light bg-light">
        <div class="row justify-content-between align-items-center">
          <div class="col">
            <%= link_to "#", class:"navbar-brand" do %>
              <i class="fab fa-instagram fa-2x"></i>
            <% end %>
          </div>
          <div class="col">
            <%= link_to "Makostagram", root_path , class:"navbar-brand ml-3"%>
          </div>
          <ul class="col navbar-nav justify-content-end">
            <li class="nav-item active">
              <%= link_to "#", class:"nav-link" do %>
                <i class="far fa-heart fa-2x"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to "#", class:"nav-link" do %>
                <i class="far fa-user fa-2x"></i>
              <% end %>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <div class="container mt-5">
      <%= yield %>
    </div>

    <footer class="container-fluid">
      <ul class="nav nav-tabs justify-content-between">
        <span>
          Makostagram by <%= link_to "makokamiya", "https://twitter.com/makokamiya" %>
        </span>
        <li class="nav-item">
          <ul class="nav nav-tabs justify-content-end">
            <li class="nav-item">
              <%= link_to "Home", root_path, class:"nav-link active" %>
            </li>
            <li class="nav-item">
              <%= link_to "About", about_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Help", help_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Contact", contact_path, class:"nav-link" %>
            </li>
          </ul>
        </li>
      </ul>
    </footer>
  </body>
</html>
